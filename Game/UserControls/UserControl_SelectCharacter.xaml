<UserControl x:Class="Game.UserControls.UserControl_SelectCharacter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="Background" Value="white"/>
        </Style>
    </UserControl.Resources>
    
    <Border>
        <TextBlock>Here you will choose your character for the rest of the game, after choosing the game screen has to load with proper data</TextBlock>
    </Border>
</UserControl>
